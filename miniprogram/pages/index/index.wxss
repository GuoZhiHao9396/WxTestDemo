.kind-list-item {
  background-color: #ff00ff;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
  
}
/*外层item布局样式*/
.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0s;
}
/*外层字体透明度*/
.kind-list-item-hd-show {
  opacity: 1;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
/*内容高度自适应*/
.kind-list-item-bd-show {
  height: auto;
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-box {
  /*opacity：透明度级别*/
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.5;
  font-size: 34rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}