.pop-example--top {
  width: 100vw;
  padding: 15px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 12px;
  text-align: center;
}

.custom-container {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #fff;
  border-radius: 10rpx;
  width: 600rpx;
  height: 60vh;
}

.custom-head {
  display: flex;
  flex-direction: row;
  height: 8vh;
}

.custom-head-close {
  color: #999;
  width: 96rpx;
  line-height: 8vh;
  text-align: center;
}

.custom-head-manifestation {
  color: #13a4fe;
  line-height: 8vh;
  text-align: center;
  padding: 0rpx 20rpx;
  font-size: 22rpx;
}

.custom-head-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.custom-center-head-change {
  display: flex;
  flex-direction: row;
}

.pop-example__container {
  overflow: hidden;
  background: #fff;
}

.pop-example__container--bottom {
  width: 100vw;
}

.pop-example__container--left, .pop-example__container--right {
  height: 100vh;
}
