/*导航样式*/

.navigation {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  box-shadow: inset 0 0 0 0 rgba(0, 0, 0, 0.30);
}

/*导航浮动起来的css*/

.float-navigation {
  position: fixed;
  top: 0;
  z-index: 1000;
}

/*导航项选中的样式*/

.navigation-item-selected {
  color: #40a0ee;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 3rpx solid #40a0ee;
}
