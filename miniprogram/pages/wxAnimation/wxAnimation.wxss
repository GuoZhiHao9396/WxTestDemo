.button-bg {
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  background: #ddd;
  border: 1rpx solid #ccc;
  width: 120rpx;
  border-radius: 10rpx;
}

@keyframes translate {
  from {
    transform: translate(0rpx);
  }

  to {
    transform: translate(30rpx);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes scale {
  from {
    transform: scale(1);
  }

  to {
    transform: scale(0.5);
  }
}

@keyframes skew {
  from {
    transform: skew(1deg);
  }

  to {
    transform: skew(-60deg);
  }
}

@keyframes queue {
  from {
    transform: translate(0rpx) rotate(0deg) scale(1);
  }

  to {
    transform: translate(100rpx) rotate(180deg) scale(0.5);
  }
}

@keyframes continue {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.translateAnimation {
  /* 动画名称 */
  animation-name: translate;
  /* 动画花费时间 */
  animation-duration: 1s;
  /* 动画速度曲线 */
  animation-timing-function: linear;
  /* 动画播放次数 */
  animation-iteration-count: 1;
  /* 动画何时开始 */
  animation-delay: 0s;
}

