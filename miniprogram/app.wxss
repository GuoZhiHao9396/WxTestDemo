@import 'components/wux.wxss';

.navigator {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 50px;
  background: #4b99fc;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 999;
}

.navigator-back {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navigator-back image {
  height: 25px;
  width: 50px;
}

.navigator-title {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navigator-title text {
  color: #fff;
  font-size: 34rpx;
  font-weight: 400;
}

